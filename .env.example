# Copy this file to .env and fill with your values

# OpenWeatherMap API (free - 1000 calls/day)
# Get at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# AWS Configuration (already configured with AWS CLI)
AWS_REGION=us-east-1
AWS_STAGE=dev

# Cache settings
CACHE_TTL_SECONDS=1800  # 30 minutes

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=60

# JWT Secret (generate a random one for production)
JWT_SECRET=change-this-secret-in-production-use-crypto-random

# Debug settings
LOG_LEVEL=info

# DynamoDB Tables (automatically configured with serverless)
DYNAMODB_TABLE=stefanini-rimac-challenge-dev
CACHE_TABLE=stefanini-rimac-challenge-cache-dev